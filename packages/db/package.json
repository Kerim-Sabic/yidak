{
  "name": "@yidak/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/client.js",
  "types": "./dist/client.d.ts",
  "exports": {
    ".": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "default": "./dist/schema/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "clean": "powershell -NoProfile -Command \"Remove-Item -Recurse -Force dist,drizzle -ErrorAction SilentlyContinue\""
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.3",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/pg": "^8.11.11",
    "@yidak/eslint-config": "workspace:*",
    "@yidak/typescript-config": "workspace:*",
    "drizzle-kit": "^0.30.4",
    "eslint": "^9.20.1",
    "vitest": "^2.1.8"
  }
}
